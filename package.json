{
  "name": "floresta-server",
  "scripts": {
    "start": "NODE_ENV=production node api/index.js",
    "dev": "nodemon -e js,graphql -x node -r dotenv/config api/index.js",
    "debug": "nodemon -e js,graphql -x node --inspect -r dotenv/config api/index.js",
    "playground": "graphql playground",
    "dev-playground": "npm-run-all --parallel start playground",
    "docker:build": "docker build -t floresta-server .",
    "docker:run": "docker run  -p 4000:4000 -itd floresta-server",
    "docker": "npm run docker:build && npm run docker:run",
    "deploy": "prisma depdevloy -e .env.staging && now",
    "deploy:prod": "now",
    "seed": "node -r dotenv/config database/seed",
    "reset": "prisma reset -f && prisma deploy && prisma seed && graphql get-schema --project database && npm test",
    "run-test": "wait-on http://localhost:4000 && NODE_ENV=production node ./test/index.test.js | tap-spec",
    "test": "npm-run-all --parallel start run-test"
  },
  "dependencies": {
    "@sindresorhus/slugify": "^0.9.1",
    "apollo-cache-inmemory": "^1.6.3",
    "apollo-client": "^2.6.4",
    "apollo-server": "^2.9.3",
    "apollo-server-express": "^2.9.3",
    "apollo-upload-client": "^11.0.0",
    "aws-sdk": "^2.528.0",
    "bcryptjs": "^2.4.3",
    "camelcase": "^5.3.1",
    "cielo": "^1.1.1",
    "cors": "^2.8.5",
    "graphql-middleware-forward-binding": "^1.3.2",
    "graphql-middleware-sentry": "^3.2.0",
    "graphql-shield": "^6.1.0",
    "graphql-upload": "^8.0.7",
    "graphql-yoga": "^1.18.3",
    "js2xmlparser": "^4.0.0",
    "jsonwebtoken": "^8.5.1",
    "lowdb": "^1.0.0",
    "mailgun.js": "^2.0.1",
    "nodemailer": "^6.3.0",
    "pagseguro.js": "latest",
    "prisma-binding": "^2.3.16",
    "readable-stream": "^3.4.0",
    "shortid": "^2.2.15",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "dotenv": "^8.1.0",
    "faker": "^4.1.0",
    "graphql-cli": "^3.0.14",
    "mkdirp": "^0.5.1",
    "node-fetch": "^2.6.0",
    "nodemon": "^1.19.2",
    "npm-run-all": "^4.1.5",
    "prisma": "^1.34.8",
    "tap-spec": "^5.0.0",
    "tape": "^4.11.0",
    "validator": "^11.1.0",
    "wait-on": "^3.3.0"
  }
}
